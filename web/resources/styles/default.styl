@import 'jeet'
@import 'axis'
@import 'rupture'
@import 'colors'


// style
*
  box-sizing: border-box


.cf:after 
    visibility: hidden
    display: block
    font-size: 0
    content: " "
    clear: both
    height: 0
    
.cf  display: inline-block
/* start commented backslash hack \*/
* html .cf  height: 1%
.cf display: block


body
  margin: 0
  padding: 0
  font-family: Helvetica Neue,Helvetica,Arial,sans-serif; 

h1, h2
  color: #929292
  font-size: 1.5em
  margin-top: 5%

h2
  font-size: 1em
  margin: 0

a, a:visited
  text-decoration: none

p
  font-size: 16px
  line-height: 24px


// the about me sidebar should look just the same
aside, #aboutInfo
  background: $dark
  span(1/4)
  color: white
  padding: 3%
  text-align center
  overflow: auto
  padding-bottom: 50px

  position: fixed
  top: 0
  bottom: 0
  left: 0

  min-height: 600px

  img
    margin: 30px 0
    width: 95%
    border-style: none
    color: $dark
    border-radius: 50%

  section
    font-size: 26px
    width: 100%
    text-align: left

    &.content
      height: 100%

    &.title
      border-bottom: 1px solid #bebebe
      padding-bottom: 20px
   
    p
      font-size: 18px 

  footer
    absolute: bottom 20px left 0
    width: 100%
    text-align: center

    a, a:visited
      font-size: 48px
      color: #BCBCBC

      &:hover
        color: $highlight

      &:nth-child(1)
        margin-right: 23px

      &:nth-child(2)
        margin-right: 20px
  
.extra, .smallextra
  display: none

    
article
  span(3/4)
  overflow: auto
  background: $light
  padding: 20px

  position: fixed
  top: 0
  bottom: 0
  right: 0
  padding-bottom: 30px


  header#pageHeader

    margin-bottom: 40px

    button
      span(1/6)
      background: none
      border: none
      outline: 0
      font-size: 20px
      
    section, a
      span(1/6)
      text-align: right
      font-size: 18px
      
      &.title
        span(2/3)
        text-align: center
        text-transform: capitalize

    a, a:visited
      color: #929292

      &:hover
        color: $highlight
  
  &.about

      img
        width: 100%

    #languages 
        padding-left: 10%
        li
            width: 30%
            margin-right: 3%

    #frameworks 
        li

            &:nth-child(2)
              padding-left: 5%

             width: 45%

    #tools li
        col(1/3, cycle: 3)

    ul
        display: table
        border-spacing: 20px
        padding-left: 0

      li
        display: table-cell
        vertical-align: middle

        img
          width: 100%


#navigation
  z-index: 10
  background: rgba(103,103,103,0.7)
  position: fixed
  left: 0
  right: 0
  top: 0
  bottom: 0
  display: none
  color: white

  .close
    position: fixed
    right: 68%
    top: 2.5%
    cursor: pointer

    &:hover
      color: $highlight

  i
    margin-right: 20px


  a, a:visited
    color: white
    text-decoration: none

    &:hover
      color: $highlight
      
    &.facebook
      color: #0869BA
      
    &.github
      color: #972CBA

  ul
    span(1/3)
    background: black
    height: 100%
    padding: 0
    padding-top: 50px
    margin-top: 0

    li
      list-style: none
      padding: 15px
      border-bottom: 2px solid rgb(103,103,103)
      width: 100%

  

#portfolio
    
    text-align: left
    padding: 5px

    a
        margin-bottom: 3%
        col(1/3, cycle: 3)
        position: relative


        img
            width: 100%
            border-radius: 10px
            box-shadow: 5px 5px 5px #B6B6B6
            z-index: 5

        .title
            display: none
            z-index: 10
            background: black

            span
              align: horizontal
              bottom: 20%
              width: 100%
              text-align: center
              background: blue
              padding: 10px 0
              background: rgba(0,138,180, .7)
              color: white

        &:hover .title
            display: block

.project_screenshot 
  width: 100%
  border-radius: 10px
  box-shadow: 2px 2px 2px rgba(0,0,0,.35)
  margin-bottom: 30px

.project_details
  text-align: center

.project_description
  margin: 40px 0 20px 0

.submit_button 
  text-align:center
  text-decoration: none
  font-family: sans-serif
  white-space: nowrap
  -webkit-font-smoothing: antialiased
  color: #FFF
  background: $highlight
  display: inline-block
  padding: 10px 40px
  border: 3px solid rgba(0, 0, 0, 0.16)
  text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.2)
  transition: all 0.25s ease

.submit_button:hover 
  background: $highlight_dark

#splash
  height: 100%
  text-align: center
  position: relative
  min-height: 525px

  background-position: center bottom
  background-repeat: repeat-x
  background-size: auto 100%
  background-color: $dark

  a, a:visited
    color: white

  img
    position: absolute
    bottom: 45%
    align(horizontal)

  section
    absolute: bottom 30%
    color: white
    text-align: center
    width: 100%
    font-size: 32px

  nav
    position: absolute
    left: 0
    right: 0
    bottom: 10%
    text-align: right
    padding: 20px
    background: $darker

    font-size: 24px

    a, a:visited
      margin-right: 20px
      text-decoration: none

      &:hover
        color: $highlight



// responsive handlers

+below($upperBreakPoint)
  aside
    display: none

  article
    cf()
    width: 100%

    &.about
      span(2/3)

  .extra
    inline-block() !important


+below($lowerBreakPoint)

  #portfolio a
    col(1/2, cycle:2, uncycle:3)


  #navigation
    ul
      cf()
      width: 100%
      text-align: left

      li
        padding-left: 20%

    .close
      right: 5%

  .extra
    display: none

  .smallextra
    inline-block()

  .postPreview
    
    .date
      display: none

    .title
      text-align: center
      cf()
      width: 100%

        


// end of file
