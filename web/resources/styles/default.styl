// this file describes the default style for homepage

// color pallette
$dark = #2d2d2d
$mid = #d4d4d4
$light = #e7e7e7
$highlight = red
$upperBreakPoint = 750px
$lowerBreakPoint = 475px


@import 'jeet'
@import 'axis'
@import 'rupture'


// style
*
  box-sizing: border-box


body
  margin: 0
  padding: 0
  font-family: Helvetica Neue,Helvetica,Arial,sans-serif; 

aside
  background: #2c2c2c
  span(1/3)
  color: white
  padding: 3%
  text-align center
  overflow: auto
  padding-bottom: 50px

  position: fixed
  top: 0
  bottom: 0
  left: 0

  +below($lowerBreakPoint)
    display: none

  min-height: 600px

  img
    margin: 30px 0
    height: 200px
    width: 200px

  section
    font-size: 26px
    width: 100%
    text-align: left

    &.content
      height: 100%

    &.title
      border-bottom: 1px solid #bebebe
      padding-bottom: 20px
   
    p
      font-size: 18px 

  footer
    absolute: bottom 20px left 0
    width: 100%
    text-align: center

    a, a:visited
      font-size: 48px
      color: #BCBCBC

      &:nth-child(1)
        margin-right: 23px

      &:nth-child(2)
        margin-right: 20px

.cf:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
    }
.cf { display: inline-block; }
/* start commented backslash hack \*/
* html .cf { height: 1%; }
.cf { display: block; }
      
    
article
  span(2/3)
  overflow: auto
  background: #e2e2e2 
  padding: 20px

  position: fixed
  top: 0
  bottom: 0
  right: 0
  padding-bottom: 30px

  +below($lowerBreakPoint)
    cf()
    width: 100%

  header

    margin-bottom: 40px

    button
      background: none
      border: none
      outline: 0
      font-size: 20px
    
    nav
      col(1/6)
      
    section
      col(1/3)
      text-align: right
      font-size: 18px
      
      &.title
        col(1/2)
        text-align: center


#portfolio
    
    text-align: left
    padding: 5px


    img
        inline-block()
        margin-bottom: 3%
        col(1/3, cycle: 3)
        box-shadow: 5px 5px 5px #B6B6B6
        border-radius: 10px

        +between($lowerBreakPoint, $upperBreakPoint)
          col(1/2, cycle:2, uncycle:3)

        +below($lowerBreakPoint)
          col(1/2, cycle:2, uncycle:3)

        


// end of file
