@import 'jeet'
@import 'colors'


.postPreview

    margin-bottom: 10%

    h1
        margin: 0

    header
        margin-bottom: 2%

    .date
        span(1/6)

    .title
        span(5/6)
        padding: 10px
        padding-top: 0
        padding-right: 15px

    .body
        margin: 0 5%

    a, a:visited

        &:hover h1
            color: $highlight



