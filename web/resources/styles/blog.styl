// styles that are specific to the blog view
// author: alec aivazis

@import 'jeet'
@import 'colors'

#blog
    padding-top: 1.5%


.postPreview

    margin-bottom: 10%

    h1
        margin: 0

    header
        margin-bottom: 2%

    .date
        span(1/6)

    .title
        span(5/6)
        padding: 10px
        padding-top: 0
        padding-right: 15px

    .body
        margin: 0 5%

    a, a:visited

        color: #454640

        &:hover, &:hover h1
            color: $highlight

    footer
        font-size: 12px
        margin: 4% 7%

        .readMore
            span(1/2)
            font-size: 14px

        section
            span(1/2)
            text-align: right

        i
            margin-right: 2%

        &:hover
            darken($highlight, 40%)
    
        .tagCloud

            a
                margin-right: 5px

            .tag
                color: black

                &:hover
                    color: $highlight

#post

    h1 
        text-align: center


// responsive handlers


+below($lowerBreakPoint)
    .tagCloud
        display: none



