// this file describes the default style for homepage

// color pallette
$dark = #2d2d2d
$mid = #d4d4d4
$light = #e7e7e7
$highlight = red
$breakpoint = 775px


@import 'jeet'
@import 'axis'
@import 'rupture'


// style
*
  box-sizing: border-box


body
  margin: 0
  padding: 0
  font-family: Helvetica Neue,Helvetica,Arial,sans-serif; 

aside
  height: 100%
  background: #2c2c2c
  span(1/3)
  color: white
  padding: 3%
  text-align center
  overflow: auto
  padding-bottom: 50px
  position: relative

  min-height: 600px

  img
    margin: 30px 0
    height: 200px
    width: 200px

  section
    font-size: 26px
    width: 100%
    text-align: left

    &.title
      border-bottom: 1px solid #bebebe
      padding-bottom: 20px
   
    p
      font-size: 18px 

  footer
    absolute: bottom 20px left 0
    width: 100%
    text-align: center

    a, a:visited
      font-size: 48px
      color: #BCBCBC

      &:nth-child(1)
        margin-right: 23px

      &:nth-child(2)
        margin-right: 20px
      
    
article
  span(2/3)
  height: 100%
  overflow: auto
  background: #e2e2e2 
  padding: 20px

  header

    button
      background: none
      border: none
      outline: 0
      font-size: 20px
    
    nav
      col(1/6)
      
    section
      col(1/3)
      text-align: right
      font-size: 18px
      
      &.title
        col(1/2)
        text-align: center
      


// end of file
