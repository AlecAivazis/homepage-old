// the homepage index

extends base

- load staticfiles
    

append head
  script(src="//use.fonticons.com/f7b7ea2b.js")

append css
  link(rel="stylesheet", type="text/stylus", href="{% static 'styles/default.styl' %}")

append js
  script(src="{% static 'thirdparty/jquery/dist/jquery.js' %}", type="text/javascript")
  script(src="{% static 'thirdparty/underscore/underscore.js' %}", type="text/javascript")
  script(src="{% static 'thirdparty/angular/angular.js' %}", type="text/javascript")


append body
  aside
    img(src="{% static 'images/me.png' %}")
    section.title
      | Hi,
      br
      | I'm Alec Aivazis.
    section
      p I'm a freelance programmer with experience in a variety of web technologies.
    footer
      a(href="http://www.facebook.com/aaivazis")
        i.icon.icon-facebook
      a(href="http://www.twitter.com/aaivazis")
        i.icon.icon-twitter
      a(href="http://www.github.com/aaivazis")
        i.icon.icon-github
  article(ng-app="homepage")
    header
      nav
        button
          i.icon.icon-bars 
      section.title
        block title
      section
        | Alec Aivazis

    section.content
      block content

  

//- end of file
